<%= link_to "Back", tasks_path %>
<%= link_to "Edit a task", edit_task_path %>

<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

<h1>Task</h1>

<h2>Name: <%= @task.title %></h2>
<p>Details: <%= @task.details %></p>
<p>Completed: <%= @task.completed %></p>
